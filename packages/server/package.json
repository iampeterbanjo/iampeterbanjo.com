{
	"name": "server",
	"version": "1.0.0",
	"description": "Server for personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "10.14.2"
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json; run-p copy-*",
		"prebuild": "rm -rf build",
		"clean": "rm -rf node_modules",
		"copy-templates": "ncp ./src/views/templates ./build/views/templates",
		"dev": "npm link css; run-s build watch-ts",
		"start-debug": "node --inspect ./build/start.js",
		"start": "node ./build/start.js",
		"test-badges": "jest-coverage-badges output ./badges",
		"test-ci": "CI=true jest",
		"test-leaks": "CI=true jest --detectLeaks --logHeapUsage",
		"test-jest": "node --trace-warnings node_modules/.bin/jest --changedFilesWithAncestor",
		"test": "run-s test-ci test-badges",
		"lint": "eslint \"**/*.js\"",
		"watch": "nodemon --delay 500ms --watch build -e js,html -x 'npm run start-debug'",
		"watch-html": "nodemon --watch ./src/views -e html -x 'run-s copy-templates'",
		"watch-ts": "tsc-watch -p tsconfig.build.json --onSuccess \"run-s copy-templates start-debug\"",
		"watch-build": "npm-run-all copy-* watch-ts",
		"watch-test": "nodemon --watch src --watch fixtures -e js,ts,json,html -x 'run-s test-jest test-badges'"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"server"
	],
	"author": {
		"email": "npm@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"config": {
		"mongodbMemoryServer": {
			"platform": "linux",
			"arch": "x64",
			"version": "4.0.12"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": "@iampeterbanjo/diva",
	"dependencies": {
		"@hapi/boom": "^7.4.3",
		"@hapi/hapi": "^18.3.1",
		"@hapi/inert": "^5.2.1",
		"@hapi/joi": "^15.0.3",
		"@hapi/vision": "^5.5.2",
		"@hapi/wreck": "^15.0.1",
		"@types/node": "^12.7.2",
		"acorn": "^6.1.1",
		"bluebird": "^3.5.4",
		"catbox-mongodb": "^4.2.1",
		"cheerio": "^1.0.0-rc.3",
		"css": "file:../css",
		"fecha": "^3.0.3",
		"glob": "^7.1.3",
		"globby": "^9.2.0",
		"gray-matter": "^4.0.2",
		"hapi-dev-errors": "^3.2.4",
		"hapi-pino": "^6.1.0",
		"jsonata": "^1.6.5",
		"lyricist": "^2.2.2",
		"marked": "^0.7.0",
		"mongoose": "^5.5.8",
		"ncp": "^2.0.0",
		"nunjucks": "^3.2.0",
		"personality-text-summary": "^2.2.0",
		"ramda": "^0.26.1",
		"rollbar": "^2.8.1",
		"slugify": "^1.3.4",
		"spotify-web-api-node": "^4.0.0",
		"typescript": "^3.5.3",
		"vue": "^2.6.10",
		"vue-server-renderer": "^2.6.10",
		"watson-developer-cloud": "^3.18.3"
	},
	"devDependencies": {
		"@iampeterbanjo/diva": "file:../diva",
		"@types/boom": "^7.3.0",
		"@types/faker": "^4.1.5",
		"@types/mongoose": "^5.5.13",
		"@types/nock": "^10.0.3",
		"@types/ramda": "^0.26.21",
		"@types/sever": "file:@types",
		"casual": "^1.6.2",
		"dependency-check": "^4.1.0",
		"jest": "^24.9.0",
		"jest-coverage-badges": "^1.1.2",
		"mongodb-memory-server": "^5.2.3",
		"nock": "^10.0.6",
		"nodemon": "^1.18.9",
		"npm-run-all": "^4.1.5",
		"prettier": "1.16.4",
		"ts-jest": "^24.0.2",
		"tsc-watch": "^2.4.0",
		"weak": "^1.0.1"
	}
}
