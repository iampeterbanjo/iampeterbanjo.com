{
	"name": "hapi-hodor",
	"version": "1.0.0",
	"description": "",
	"main": "build/index.js",
	"scripts": {
		"build": "tsc -p tsconfig.build.json; run-p copy-*",
		"prebuild": "rm -rf build",
		"clean": "rm -rf node_modules",
		"test-ci": "CI=true jest",
		"test-jest": "node --trace-warnings node_modules/.bin/jest --changedFilesWithAncestor",
		"test": "run-s test-ci test-badges",
		"test-badges": "jest-coverage-badges output ./badges",
		"watch-ts": "tsc-watch -p tsconfig.build.json",
		"watch-test": "nodemon --watch src -e ts,json -x 'run-s test-jest test-badges'"
	},
	"author": {
		"email": "npm@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"keywords": [
		"security",
		"auth0",
		"hapi"
	],
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": "@iampeterbanjo/diva",
	"license": "ISC",
	"devDependencies": {
		"@hapi/hapi": "^18.4.0",
		"@iampeterbanjo/diva": "file:../diva",
		"@types/node": "^12.7.5",
		"jest": "^24.9.0",
		"jest-coverage-badges": "^1.1.2",
		"nodemon": "^1.18.9",
		"npm-run-all": "^4.1.5",
		"prettier": "1.16.4",
		"ts-jest": "^24.0.2",
		"tsc-watch": "^2.4.0",
		"typescript": "^3.5.3"
	},
	"dependencies": {
		"@hapi/accept": "^3.2.3",
		"@hapi/bell": "^11.1.0",
		"@hapi/boom": "^8.0.1",
		"@hapi/cookie": "^10.1.2",
		"@hapi/joi": "^16.1.4",
		"url-type": "^0.2.1"
	}
}
