{
	"name": "site",
	"version": "1.0.0",
	"description": "Personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "10.14.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iampeterbanjo/iampeterbanjo.com.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"homepage": "https://iampeterbanjo.com",
	"scripts": {
		"build": "cd ./packages/css; pnpm run build",
		"clean-css": "rm -f ./css/main.css",
		"clean": "pnpm run clean-css && pnpm recursive exec -- rm -rf node_modules; rm -rf node_modules",
		"deploy": "pnpm run lint && pnpm run test && git push && git push github",
		"dev": "cd ./packages/server; pnpm run dev",
		"dry-run": "pnpm run build && pnpm run start",
		"start": "node ./packages/server/start.js",
		"test-data": "cd ./packages/data; pnpm run test",
		"test-e2e": "cd ./packages/e2e; pnpm run test",
		"test-server": "cd ./packages/server; pnpm run test",
		"test": "pnpx npm-run-all test-*"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"gatsby",
		"react",
		"tachyons"
	],
	"author": {
		"email": "github@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"private": true,
	"devDependencies": {
		"eslint": "^5.16.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-react": "^7.11.0",
		"husky": "^1.3.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.11.1"
	}
}
