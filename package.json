{
	"name": "site",
	"version": "1.0.0",
	"description": "Personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "10.14.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iampeterbanjo/iampeterbanjo.com.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"homepage": "https://iampeterbanjo.com",
	"scripts": {
		"setup": "npm install --ignore-scripts && run-p install-*",
		"build": "run-p build-*",
		"build-css": "cd ./packages/css; npm run build",
		"build-data": "cd ./packages/data; npm run build",
		"prebuild-data": "cd ./packages/models; npm run build",
		"postbuild-css": "cd ./packages/server; npm run build",
		"clean-css": "cd ./packages/css; rm -rf node_modules main.css",
		"clean-data": "cd ./packages/data; rm -rf node_modules",
		"clean-docs": "cd ./packages/docs; rm -rf node_modules",
		"clean-e2e": "cd ./packages/e2e; rm -rf node_modules",
		"clean-models": "cd ./packages/models; rm -rf node_modules build",
		"clean-server": "cd ./packages/server; rm -rf node_modules build",
		"clean": "npm-run-all clean-*; rm -rf node_modules",
		"deploy": "bash ./deploy.sh",
		"dev-css": "cd ./packages/css; npm run dev",
		"dev-data": "cd ./packages/data; npm run dev",
		"dev-models": "cd ./packages/models; npm run dev",
		"dev-server": "cd ./packages/server; npm run dev",
		"postdev": "run-s logs",
		"logs": "pm2 logs",
		"dev": "run-s install-* && run-p dev-*",
		"predev": "npm run git-update",
		"git-update": "git submodule update --init --recursive --merge",
		"diva": "cd ./packages/diva;",
		"docs-adr": "cd ./packages/docs; npx adr",
		"dry-run": "run-s clean-* && NODE_ENV=production npm install && npm start",
		"postinstall": "if test \"$NODE_ENV\" = \"production\"; then npm run prod; else npm run dev; fi",
		"stop": "pm2 kill",
		"install-css": "cd ./packages/css; npm install",
		"install-data": "cd ./packages/data; npm install",
		"install-docs": "cd ./packages/docs; npm install",
		"install-e2e": "cd ./packages/e2e; npm install",
		"install-hodor": "cd ./packages/hapi-hodor; npm install",
		"install-models": "cd ./packages/models; npm install",
		"install-server": "cd ./packages/server; npm install",
		"e2e": "cd ./packages/e2e; npm",
		"css": "cd ./packages/css; npm",
		"server": "cd ./packages/server; npm",
		"format": "pretty-quick",
		"lint": "npx pretty-quick --check",
		"prod": "run-s install-css install-models install-data install-server build-css build-data",
		"start": "pm2 start ecosystem.config.js --env production",
		"test-data": "cd ./packages/data; npm run test",
		"test-e2e": "cd ./packages/e2e; npm run test",
		"test-server": "cd ./packages/server; npm run test",
		"test": "NODE_ENV=test npx npm-run-all test-*",
		"watch-start": "pm2 start ecosystem.config.js --watch",
		"watch-server-test": "cd ./packages/server; npm run watch-test"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"gatsby",
		"react",
		"tachyons"
	],
	"author": {
		"email": "github@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"private": true,
	"devDependencies": {
		"@types/jest": "^24.0.18",
		"prettier": "^1.18.2",
		"pretty-quick": "^1.11.1"
	},
	"dependencies": {
		"@iampeterbanjo/diva": "^1.0.1",
		"hapi-pino": "^6.1.0",
		"npm-run-all": "^4.1.5",
		"pm2": "^4.2.1"
	}
}
