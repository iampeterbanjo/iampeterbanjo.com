{
	"name": "site",
	"version": "1.0.0",
	"description": "Personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "^10"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iampeterbanjo/iampeterbanjo.com.git"
	},
	"homepage": "https://iampeterbanjo.com",
	"scripts": {
		"blog-dev": "yarn blog dev",
		"blog": "yarn --cwd ./blog",
		"build": "yarn css build && yarn blog build",
		"clean-blog": "rimraf ./blog/node_modules ./blog/public",
		"clean-css": "rimraf ./css/node_modules ./css/build",
		"clean-server": "rimraf ./server/node_modules",
		"clean": "npm run clean-css && npm run clean-blog && npm run clean-server",
		"css-dev": "yarn css dev",
		"css": "yarn --cwd ./css",
		"deploy": "npm run test && git push && git push github",
		"dev": "npm-run-all -p blog-dev server-dev css-dev",
		"dry-run": "npm run build && npm run start",
		"lint-all": "prettier --config prettier.config.js --write '{server,blog,css,__{tests,mocks}__}/**/*.{js,jsx}'",
		"postinstall": "npm run build",
		"preinstall": "npm run setup",
		"server-dev": "yarn server dev",
		"server": "yarn --cwd ./server",
		"setup": "yarn server install && yarn css install && yarn blog install",
		"start-debug": "node --inspect ./server/start.js",
		"start": "node ./server/start.js",
		"test-watch": "nodemon --watch server --watch blog/src --watch __tests__ -e js,json,html -x 'npm run test'",
		"test": "yarn server test"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"gatsby",
		"react",
		"tachyons"
	],
	"author": {
		"email": "me@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"private": true,
	"workspaces": [
		"css",
		"blog",
		"server"
	],
	"dependencies": {
		"acorn": "^6.1.1",
		"ejs": "^2.6.1",
		"good": "^8.1.2",
		"good-console": "^7.1.0",
		"good-squeeze": "^5.1.0",
		"got": "^9.6.0",
		"hapi": "18.x.x",
		"inert": "^5.1.2",
		"jsonata": "^1.6.4",
		"lyricist": "^2.2.2",
		"pug": "^2.0.3",
		"rimraf": "^2.6.3",
		"vision": "^5.4.4",
		"watson-developer-cloud": "^3.18.3"
	},
	"devDependencies": {
		"code": "^5.2.4",
		"ejs-lint": "^0.3.0",
		"fs-extra": "^7.0.1",
		"lab": "^18.0.2",
		"nock": "^10.0.6",
		"nodemon": "^1.18.9",
		"npm-run-all": "^4.1.5",
		"prettier": "1.16.4",
		"sinon": "^7.2.6"
	}
}
