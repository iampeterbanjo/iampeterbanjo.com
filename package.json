{
	"name": "site",
	"version": "1.0.0",
	"description": "Personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "12.6.x"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iampeterbanjo/iampeterbanjo.com.git"
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint"
		],
		"*.{js,jsx,json,md}": [
			"pnpm run lint-fix && lint-errors"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"homepage": "https://iampeterbanjo.com",
	"scripts": {
		"build": "cd ./packages/css; pnpm run build",
		"clean-css": "rimraf ./packages/css/node_modules ./packages/css/build",
		"css-dev": "yarn css dev",
		"clean-e2e": "rimraf ./packages/e2e/node_modules",
		"clean-root": "rimraf ./packages/node_modules",
		"clean-server": "rimraf ./packages/server/node_modules",
		"clean": "pnpm recursive exec -- rm -rf node_modules; rm -rf node_modules",
		"css": "yarn workspace css",
		"deploy": "yarn lint && yarn test && git push && git push github",
		"dev": "npm-run-all -p server-dev css-dev",
		"dry-run": "yarn build && yarn start",
		"docs": "yarn workspace docs",
		"data": "yarn workspace data",
		"e2e": "yarn workspace e2e",
		"lint-errors": "prettier --config prettier.config.js --list-different",
		"lint-fix": "prettier --config prettier.config.js --write ./packages/**/*.{md}",
		"lint": "eslint --fix-dry-run ./packages/e2e ./packages/server",
		"start": "node ./packages/server/start.js",
		"test": "lint && pnpm recursive run test"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"gatsby",
		"react",
		"tachyons"
	],
	"author": {
		"email": "me@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"eslint": "^5.16.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-react": "^7.11.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.16.4"
	}
}
