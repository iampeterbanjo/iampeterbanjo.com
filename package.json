{
	"name": "site",
	"version": "1.0.0",
	"description": "Personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "^10"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iampeterbanjo/iampeterbanjo.com.git"
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint"
		],
		"*.{js,jsx,json,md}": [
			"prettier --list-different"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"homepage": "https://iampeterbanjo.com",
	"scripts": {
		"blog-dev": "yarn blog dev",
		"blog": "yarn --cwd ./blog",
		"build": "yarn css build && yarn blog build",
		"clean-blog": "rimraf ./blog/node_modules ./blog/public",
		"clean-css": "rimraf ./css/node_modules ./css/build",
		"css-dev": "yarn css dev",
		"clean-e2e": "rimraf ./e2e/node_modules",
		"clean-root": "rimraf ./node_modules",
		"clean-server": "rimraf ./server/node_modules",
		"clean": "npm-run-all clean-css clean-blog clean-e2e clean-server clean-root",
		"css": "yarn --cwd ./css",
		"deploy": "yarn lint && yarn test && git push && git push github",
		"dev": "npm-run-all -p blog-dev server-dev css-dev",
		"dry-run": "yarn build && yarn start",
		"e2e": "yarn --cwd e2e",
		"lint": "yarn eslint blog e2e server --fix",
		"postinstall": "yarn build",
		"preinstall": "yarn setup",
		"server-dev": "yarn server dev",
		"server": "yarn --cwd ./server",
		"setup": "yarn server install && yarn css install && yarn blog install && yarn e2e install",
		"start-debug": "node --inspect ./server/start.js",
		"start": "node ./server/start.js",
		"test-watch": "nodemon --watch server --watch blog/src --watch __tests__ -e js,json,html -x 'yarn test'",
		"test": "yarn server test && yarn e2e test"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"gatsby",
		"react",
		"tachyons"
	],
	"author": {
		"email": "me@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"private": true,
	"workspaces": [
		"css",
		"blog",
		"server",
		"e2e"
	],
	"devDependencies": {
		"eslint": "^5.3.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-react": "^7.11.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.16.4"
	}
}
