{
	"name": "iampeterbanjo.com",
	"version": "1.0.0",
	"description": "Personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "^10"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iampeterbanjo/iampeterbanjo.com.git"
	},
	"homepage": "https://iampeterbanjo.com",
	"scripts": {
		"blog-build": "cd ./blog && npm run build",
		"blog-dev": "cd ./blog && npm run dev",
		"blog-install": "cd ./blog && npm install",
		"blog-test-watch": "cd ./blog && npm run test-watch",
		"build-clean": "rm -rf ./public/build",
		"build": "npm run css-build && npm run blog-build",
		"clean-blog": "rm -rf ./blog/node_modules ./blog/public || exit 0",
		"clean-css": "rm -rf ./css/node_modules ./css/build || exit 0",
		"clean-server": "rm -rf ./server/node_modules || exit 0",
		"clean": "npm run clean-css && npm run clean-blog && npm run clean-server",
		"css-build": "cd ./css && npm run build",
		"css-dev": "cd ./css && npm run dev",
		"css-install": "cd ./css && npm install",
		"deploy": "npm run test && git push && git push github",
		"dev": "npm-run-all -p blog-dev server-dev css-dev",
		"dry-run": "npm run build && npm run start",
		"lint-all": "prettier --config prettier.config.js --write '{server,blog,css,__{tests,mocks}__}/**/*.{js,jsx}'",
		"postinstall": "npm run build",
		"preinstall": "npm run setup",
		"server-install": "cd ./server && npm install",
		"server-dev": "cd ./server && npm run dev",
		"setup": "npm run server-install && npm run css-install && npm run blog-install",
		"start-debug": "node --inspect ./server/start.js",
		"start": "node ./server/start.js",
		"test-watch": "nodemon --watch server --watch blog/src --watch __tests__ -e js,json -x 'npm run test'",
		"test": "lab -c ./__tests__/"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi"
	],
	"author": {
		"email": "me@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"dependencies": {
		"acorn": "^6.1.1",
		"ejs": "^2.6.1",
		"good": "^8.1.2",
		"good-console": "^7.1.0",
		"good-squeeze": "^5.1.0",
		"got": "^9.6.0",
		"hapi": "18.x.x",
		"inert": "^5.1.2",
		"jsonata": "^1.6.4",
		"lyricist": "^2.2.2",
		"pug": "^2.0.3",
		"vision": "^5.4.4",
		"watson-developer-cloud": "^3.18.3"
	},
	"devDependencies": {
		"code": "^5.2.4",
		"ejs-lint": "^0.3.0",
		"fs-extra": "^7.0.1",
		"lab": "^18.0.2",
		"nock": "^10.0.6",
		"nodemon": "^1.18.9",
		"npm-run-all": "^4.1.5",
		"prettier": "1.16.4",
		"sinon": "^7.2.6"
	}
}
