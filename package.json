{
  "name": "iampeterbanjo.com",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "main": "index.js",
  "engines": {
    "node": "^10"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-clean": "rm -rf ./public/build",
    "build": "npm run static-build && npm run css-build",
    "postinstall": "npm run build",
    "start": "node ./server/index.js",
    "server-watch": "nodemon ./server/index.js",
    "prestatic-build": "npm run static-lint && npm run static-clean",
    "static-build": "npx eleventy",
    "static-lint": "npx eleventy --dryrun",
    "static-debug": "DEBUG=Eleventy* npx eleventy",
    "static-clean": "rm -rf ./public/build/static",
    "static-watch": "npx nodemon -e js,ejs,html,json,md,css,njk --watch static -x 'npm run static-build'",
    "css-build": "npx gulp css",
    "css-watch": "npx gulp css-watch",
    "precss-watch": "npm run css-build"
  },
  "keywords": [
    "personal",
    "portfolio",
    "hapi"
  ],
  "author": {
    "email": "me@iampeterbanjo.com",
    "name": "Peter Banjo"
  },
  "license": "ISC",
  "dependencies": {
    "hapi": "^17.8.1",
    "inert": "^5.1.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.6.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.1",
    "autoprefixer": "^9.4.4",
    "ejs-lint": "^0.3.0",
    "fs-extra": "^7.0.1",
    "gulp": "^4.0.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "precss": "^4.0.0",
    "tachyons-sass": "^4.9.5"
  }
}
